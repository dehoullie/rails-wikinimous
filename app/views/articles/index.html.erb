<div class="container">
  <h1>Articles</h1>
  <div class="row">
    <% @articles.each do | article | %>
    <div class="card p-0 my-2">
      <%= link_to article_path(article) do %>
      <h5 class="card-header"><%= article.title %></h5>
      <%end%>
      <div class="card-body">
        <p class="card-text"><%= article.content %></p>
      </div>
    </div>
    <%end%>

  </div>
</div>
